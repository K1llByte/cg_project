        <model command="plane 8" texture="assets/plane_kitchen.jpg" ambient="test_amb" shininess="128"/>

        <group>
            <translate Y="1.5"/>
            <model command="cylinder 1 3 20 20" texture="assets/cylinder_barrel.jpg" ambient="test_amb" shininess="128"/>
        </group>
    </group> -->
    

</scene>