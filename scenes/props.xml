<colors>
    <color name="red" r="1"/>
    <color name="green" g="1"/>
    <color name="blue" b="1"/>
    <color name="cor1" r="0.8" g="0.3" b="1" a="0.81"/>
    <color name="saturn" r="0.756" g="0.666" b="0.541" a="0.5"/> 
    <color name="moon" r="0.541" g="0.541" b="0.541" a="0.8"/>

    <color name="test_diff" r="0.8" g="0.8" b="0.8" a="1.0"/>
    <color name="test_amb" r="0.4" g="0.4" b="0.4" a="1.0"/>
    <color name="test_spec" r="0.2" g="0.2" b="0.2" a="1.0"/>
    <color name="test_emi" r="1.0" g="1.0" b="1.0" a="1.0"/>

    <color name="null" r="0.0" g="0.0" b="0.0" a="1.0"/>
    <color name="white" r="1.0" g="1.0" b="1.0" a="1.0"/>

    <color name="fl_diff" r="0.3" g="0.3" b="0.3" a="1.0"/>
    <color name="fl_amb" r="0.3" g="0.3" b="0.3" a="1.0"/>

    <!-- TV -->
    <color name="tv" r="0.05" g="0.05" b="0.05" a="1.0"/>
    <!-- TV Table -->
    <color name="tv_t" r="0.4" g="0.4" b="0.4" a="1.0"/>
    
    <!-- Up Light -->
    <color name="light_glass" r="0.4" g="0.5" b="0.55" a="0.7"/>
    <color name="bulb" r="1" g="1" b="0" a="1"/>
    
</colors>

<scene>
    <skybox width="500" texture="assets/skybox_stars.png"/>
    <lights>
        <!-- LIGHT 0 -->
        <light type="POINT" posX="-5" posY="5" posZ="0" attenuation="0"/>
        <light type="POINT" posX="5" posY="5" posZ="0" attenuation="0"/>
    </lights>
    <camera posX="5" posY="5" posZ="5"/>

    <group>
            <!-- LIGHT 0 REPRESENTATION -->
            <translate X="5" Y="5"/>
            <model command="sphere 0.1 10 10" diffuse="null" ambient="null" specular="null" emission="white"/>    
    </group>

    <group> <!-- Ground -->

        <model command="plane 6"  ambient="test_amb" texture="assets/_wood2.jpg"/>
    </group>


    
    <group> <!-- TV & TV Table -->
        <translate X="3"/>    <!-- TEMPORARY -->
        <rotate angle="180" axisY="1"/>    <!-- TEMPORARY -->


        <group> <!-- TV -->
            <translate Y="0.46"/>
            <model command="box 0.3 0.05 0.7 0" diffuse="tv"  />
            <group>
                <translate Y="0.1"/>
                <model command="cylinder 0.05 0.2 5 5" diffuse="tv" />
            </group>
            <group>
                <translate Y="0.6" X="0.04"/>
                <model command="box 0.05 1 1.777 0" diffuse="tv"  />
                <group>
                    <scale Z="1.777"/>
                    <group>
                        <scale Y="0.95" Z="0.964"/>
                        <rotate angle="-90" axisZ="1"/>
                        <translate Y="0.027"/>
                        <model command="plane 1" emission="white" texture="assets/thththth.png"/>
                    </group>
                </group>
            </group>
        </group>


        <group> <!-- TV Table -->
            <!-- <translate X="3" /> -->

            <group> <!-- Horizontal -->
                <translate Y="0.03"/>
                <model command="box 0.8 0.06 1.3 0" ambient="tv_t" texture="assets/_wood.jpg"/>

                <group>
                    <translate Y="0.2"/>
                    <model command="box 0.8 0.06 1.3 0" ambient="tv_t" texture="assets/_wood.jpg"/>

                    <group>
                        <translate Y="0.2"/>
                        <model command="box 0.8 0.06 1.3 0" ambient="tv_t" texture="assets/_wood.jpg"/>
                    </group>
                </group>
            </group>

            <group>
                <translate Y="0.23" Z="0.62"/>
                <model command="box 0.8 0.4 0.06 0" ambient="tv_t" texture="assets/_wood.jpg"/>    
                <group>
                    <translate Z="-1.24"/>
                    <model command="box 0.8 0.4 0.06 0" ambient="tv_t" texture="assets/_wood.jpg"/>    
                </group>
            </group>
        </group>

    </group>





    <group> <!-- SOFA -->
        <group>
            <translate Y="0.4" Z="1.3"/>
            <model command="box 1 0.6 0.3 0"/>
        </group>
        <group>
            <translate Y="0.4" Z="-1.3"/>
            <model command="box 1 0.6 0.3 0"/>
        </group>

        <group>
            <translate Y="0.25" Z="0"/>
            <model command="box 1 0.3 2.6 0"/>
        </group>
        
        <group>
            <translate X="-0.412" Y="0.7" Z="0.575"/> <!-- X="-0.35" -->
            <rotate angle="12" axisZ="1"/>
            <model command="box 0.3 0.7 1.15 0"/>
        </group>
        <group>
            <translate X="-0.412" Y="0.7" Z="-0.575"/>
            <rotate angle="12" axisZ="1"/>
            <model command="box 0.3 0.7 1.15 0"/>
        </group>

        <group>
            <translate X="0.4" Y="0.05" Z="1.25"/>
            <model command="cylinder 0.05 0.1 5 5"/>
        </group>
        <group>
            <translate X="-0.4" Y="0.05" Z="1.25"/>
            <model command="cylinder 0.05 0.1 5 5"/>
        </group>
        <group>
            <translate X="0.4" Y="0.05" Z="-1.25"/>
            <model command="cylinder 0.05 0.1 5 5"/>
        </group>
        <group>
            <translate X="-0.4" Y="0.05" Z="-1.25"/>
            <model command="cylinder 0.05 0.1 5 5"/>
        </group>

    </group>



    <!-- UP LIGHT -->
    <group>
        <group>
            <translate Y="1"/>
            <model command="cylinder 0.1 0.3 10 10" ambient="light_glass" diffuse="light_glass"/>
        </group>
        
        <group>
            <translate Y="1"/>
            <model command="sphere 0.05 8 8" ambient="bulb" emission="bulb"/>
        </group>
    
    </group>
    




